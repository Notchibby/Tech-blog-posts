 <div class="blog-card" data-id=>

    <div class="card-title">
      <p class="title-content" id="title-content">{{blog.title}}</p>

      <p class="title-content">posted by {{blog.user.username}} on {{format_date blog.date_created}}</p>

    </div>
    

    <div class="card-body">
      <p>
        {{blog.content}}
      </p>
    </div>
  </div>
 
 <form class="form login-form" id="signup">
    <div class="comment-form"></div>

    <div class="form-group " id="username-login">
      <label for="username-login">Comment</label>
      <input class="form-input" type="text"  id="comment"  />
    </div>
    
    <div class="form-group">
      <button class="button" type="submit" id="button" data-id="{{blog_id}}">Submit</button>
    </div>
  </form>

  <script src="/js/newcomment.js"></script>